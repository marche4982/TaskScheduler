<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/layout_todotask_column1"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/task_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12pt"
            android:text="TextView" />
        <Button
            android:id="@+id/button_todotask_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="8pt"
            android:text="Delete" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_todotask_column2"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_todotask_period"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt">
        </TextView>

        <TextView
            android:id="@+id/textview_todotask_memo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12pt">
        </TextView>
    </LinearLayout>
</LinearLayout>